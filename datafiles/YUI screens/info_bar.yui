id: _info_bar
file_type: screen

root:
  is_cursor_layer: true
  type: panel
  layout: horizontal
  size: stretch
  background: ~yui_panel_bg
  padding: 10
  spacing: 245
  elements:
    - type: button
      size: {w: 32, h: 32}
      autofocus: false
      content: " "
      background: ~spCog
      on_click: @@ ~toggle_pause()
    - type: text
      text: @@'Money - ' + ~oPlayer.money
    - type: text
      text: @length


